            <div>
                <label for="species">Especie</label>
                <input type="text" id="species" name="species" placeholder="">
            </div>
            <div>
                <label for="age">Edad</label>
                <input type="number" id="age" name="age" placeholder="">
            </div>
            <div>
                <input class="button"  value="Agregar Mascota" type="submit"> 
            </div> -->
            <div>
                <input class="button"  value="Crear cuenta" type="submit"> 
            </div>
        </form>
        <div>
            <a href="/" class="button_bck_home"><input class="button"  value="Volver a la tienda" type="submit"></a> 
        </div>
    </div>
    </section>
    </main>
        <%- include('../partials/footer') %>
        <script src="/js/userRegisterValidation.js"></script>
        
</body>
</html>