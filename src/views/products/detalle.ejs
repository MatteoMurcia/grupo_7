<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { hojasDeEstilo: ["detalle"] })%>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="producto">
                    <img src="/images/<%= product.images %>">
                    <div class="info">
                        <h3 class="Nombre">
                            <%= product.product_name %>
                        </h3>
                        <div class="marca-stars">
                            <p>Marca: <%= product.brand %></p>
                            <div class="stars">
                                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i
                                    class="fa fa-star"></i><i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div>
                            <p>Precio: $<%= product.price %></p>
                        </div>
                        <p>Disponibilidad: <i class="fa fa-check"></i></p>
                    </div>
                </div>
                <div class="detalle">
                    <h3>Detalles del producto</h3>
                    <br>
                    <p>
                        <%= product.desc_product %>
                    </p>
                </div>
                <button class="button_buy">Comprar</button>
                <div class="buttons">
                    <a href="/adm/<%=product.product_id %>/edit"><button class="button">Editar</button></a>
                    <a href="/adm/delete/<%= product.product_id %>"><button class="button">Borrar</button></a>
                </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>