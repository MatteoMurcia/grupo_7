<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { hojasDeEstilo: ["detalle"] })%>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="producto">
                    <img src="/images/<%= product.images %>">
                    <div class="info">
                        <h3 class="Nombre">
                            <%= product.product_name %>
                        </h3>
                        <div class="marca-stars">
                            <p><u>Marca: <%= product.brand %></u></p>
                            <div class="stars">
                                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i
                                    class="fa fa-star"></i><i class="fa fa-star"></i>
                            </div>
                        </div>
                        <h2><u>
                                <%= product.price %>
                            </u></h2>
                        <p>Disponibilidad: <i class="fa fa-check"></i></p>
                        <h3>Referencia</h3>
                        <div class="referencia">
                            <input type="checkbox" class="slectOne" value="xxl" id="xxl">
                            <label for="xxl">XXL </label>
                            <input type="checkbox" class="slectOne" value="xl" id="xl">
                            <label for="xl">XL </label>
                        </div>

                    </div>
                </div>
                <div class="detalle">
                    <h3>Detalles del producto</h3>
                    <br>
                    <p>
                        <%= product.desc_product %>
                    </p>
                </div>
                <div class="buttons">
                    <a href="/adm/<%=product.id %>/edit"><button class="button">Editar</button></a>
                    <button class="button">Borrar</button>
                </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>