<!DOCTYPE html>
<html>
    <%- include('../partials/head', { hojasDeEstilo: ["productsList"] })%>
<body>
    <%- include('../partials/header') %>
    <main>
        <h3 class="tittle">Snacks</h3>
        <section class="productsList">
            <% for(let i = 0; i < snacks.length; i++){ %>
                <a class="control__a" href="/products/<%= snacks[i].id %>">
                    <article>
                  <img src="/images/<%= snacks[i].image %>">
                  <div class="products__details">
                      <p class="products__details-name">
                          <%= snacks[i].name %> 
                      </p>
                      <p class="products__details-price">
                          <%= snacks[i].price %>
                      </p>
                      <p>
                          <%= snacks[i].description %>
                      </p>
                  </div>
                    </article>
                </a>
              <% } %>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>