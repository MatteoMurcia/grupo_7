<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {hojasDeEstilo: ["formCreateProduct"] })%>


    <body>

        <%- include('../partials/header') %>

            <main class="align">
                <div class="register">
                    <section class="login__header">
                        <h2>Crear Producto</h2>
                    </section>
                    <form action="new" class="createProduct__form" method="POST" enctype="multipart/form-data">
                        <div class="insideForm">
                            <div class="inputs">
                                <div>
                                    <label for="nameProduct" style="margin-right: 20px;">Nombre</label>
                                    <input type="text" id="name" name="nameProduct"
                                        placeholder="Ingrese el nombre del producto">
                                </div>
                                <% if (locals.errors && errors.nameProduct) { %>
                                    <div class="text-danger">
                                        <%= errors.nameProduct.msg %> 
                                    </div>
                                <% } %>

                                <div>
                                    <label for="descriptionProduct" style="margin-right: 20px;">Descripción</label>
                                    <textarea id="ProductDescription" name="descriptionProduct"
                                        placeholder="Ingrese la descripción"></textarea>
                                </div>
                                <% if (locals.errors && errors.descriptionProduct) { %>
                                    <div class="text-danger">
                                        <%= errors.descriptionProduct.msg %> 
                                    </div>
                                <% } %>
                                <div>
                                    <label for="imageProduct" style="margin-right: 20px;">Imagen</label>
                                    <input type="file" id="image" name="imageProduct" accept=".pdf,.jpg,.png" />

                                </div>
                                <% if(locals.errors && errors.imageProduct){ %>
                                    <div class="text-danger">
                                        <%= errors.imageProduct.msg %> 
                                    </div>
                                <% } %>
                                <div>
                                    <label for="categoryProduct" style="margin-right: 20px;">Categoria</label>
                                    <select id="category" name="categoryProduct">
                                        <option value="alimentos">Alimentos</option>
                                        <option value="snacks">Snacks</option>
                                        <option value="accesorios">Accesorios</option>
                                        <option value="juguetes">Juguetes</option>
                                        <option value="higiene">Cuidado e Higiene</option>
                                    </select>

                                </div>
                                <div>
                                    <label for="typeProduct" style="margin-right: 50px;">Tipo</label>
                                    <select id="type" name="typeProduct">
                                        <option value="destacado">Destacados</option>
                                        <option value="in-sale">Con Rebajas</option>
                                        <option value="normal">Normal</option>
                                    </select>

                                </div>

                                <div>
                                    <label for="brandProduct" style="margin-right: 20px;">Marca</label>
                                    <input type="text" id="brand" name="brandProduct" placeholder="Ingrese la marca">
                                </div>
                                <% if(locals.errors && errors.brandProduct){ %>
                                    <div class="text-danger">
                                        <%= errors.brandProduct.msg %> 
                                    </div>
                                <% } %>
                                <div>
                                    <label for="priceProduct" style="margin-right: 20px;">Precio</label>
                                    <input type="text" id="price" name="priceProduct" placeholder="Ingrese el precio">
                                </div>
                                <% if(locals.errors && errors.priceProduct){ %>
                                    <div class="text-danger">
                                        <%= errors.priceProduct.msg %> 
                                    </div>
                                <% } %>
                            </div>
                            <div class="errores__control">
                                <ul class="errores"></ul>
                            </div>
                        </div>
                        <div>
                            <input class="button" value="Crear producto" type="submit">
                        </div>
                    </form>
                    <div>
                        <a href="/" class="button_bck_home"><input class="button" value="Volver a la tienda"></a>
                    </div>
            </main>
            <%- include('../partials/footer') %>         
            <script src="/js/productNewValidation.js"></script>   
    </body>

</html>