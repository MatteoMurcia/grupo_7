<!DOCTYPE html>
<html>
    <%- include('../partials/head', { hojasDeEstilo: ["productsList"] })%>
<body>
    <%- include('../partials/header') %>
    <main>
        <h3 class="tittle">Todos los productos</h3>
        <section class="products">
            <% for(let i = 0; i < productsList.length; i++){ %>
                <a class="control__a" href="/products/<%=productsList[i].id%>">
                    <article>
                  <img src="images/<%= productsList[i].image %>">
                  <div class="products__details">
                      <p class="products__details-name">
                          <%= productsList[i].name %> 
                      </p>
                      <p class="products__details-price">
                          <%= productsList[i].price %>
                      </p>
                      <p>
                          <%= productsList[i].description %>
                      </p>
                  </div>
                    </article>
                </a>
              <% } %>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>

