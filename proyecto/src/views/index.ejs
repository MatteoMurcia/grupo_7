<!DOCTYPE html>
<html>
<%- include('./partials/head', { hojasDeEstilo: [" "]})%>
<body>
    <%- include('./partials/header') %>
    <section class="banner">
        <img src="images/banner.webp">
    </section>
    <main>
        <h3 class="tittle-categories">Categor√≠as</h3>
        <section class="categories">
                <article class="categories-article">
                    <div class="categories-div">
                        <a href="/products/alimentos"><img src="images/category-alimento.png"></a>
                    </div>
                    <a href="/products/alimentos"><p class="categories-p">Alimentos</p></a>
                </article>
                <article class="categories-article">
                    <div class="categories-div">
                        <a href="/products/snacks"><img src="images/category-snacks.png"></a>
                    </div>
                    <a href="/products/snacks"><p class="categories-p">Snacks</p></a>
                </article>
                <article class="categories-article">
                    <div class="categories-div">
                        <a href="/products/accesorios"><img src="images/category-accesorios.png"></a>
                    </div>
                    <a href="/products/accesorios"><p class="categories-p">Accesorios</p></a>
                </article>
                <article class="categories-article">
                    <div class="categories-div">
                        <a href="/products/juguetes"><img src="images/category-juguetes.png"></a>
                    </div>
                    <a href="/products/juguetes"><p class="categories-p">Juguetes</p></a>
                </article>
                <article class="categories-article">
                    <div class="categories-div">
                        <a href="/products/higiene"><img src="images/category-higiene.png"></a>
                    </div>
                    <a href="/products/higiene"><p class="categories-p">Cuidado e Higiene</p></a>
                </article>
        </section>
        <h3 class="tittle-products">Productos destacados</h3>
        <section class="products">
            <% for(let i = 0; i < productosDestacados.length; i++){ %>
                <a href="/products/<%= productosDestacados[i].id %>"><article class="control__a-article">
                    <img src="images/<%= productosDestacados[i].image %>">
                    <div class="products__details">
                        <p class="products__details-name"><%= productosDestacados[i].name %></p>
                        <p class="products__details-price"><%= productosDestacados[i].price %></p>
                    </div>
                </article></a>
              <% } %>
        </section>
        <a class="control__main-a" href="/products"><h4>Ver todos los productos</h4></a>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>